@model Core.DTOs.Admin.ChangeRoleofUserVM
@if (Model.IsSuccess == false)
{
    <h4 class="text-xs-center alert alert-info">تغییر سمت : @Model.User.FullName</h4>
    <div class="row">
        <div class="col-md-12" id="ChangeRole">
            <form asp-action="ChangeRoleofUser" asp-controller="AdminUsers" asp-area="Admin"
                  data-ajax="true"
                  data-ajax-method="POST"
                  data-ajax-mode="replace"
                  data-ajax-update="#ChangeRole">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UrId" />
                <div class="form-group">
                    <label asp-for="NewRoleId" class="control-label"></label>

                    <select asp-for="NewRoleId" class="form-control">
                        <option value="">سمت را انتخاب کنید ...</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.RoleId">@role.RoleTitle</option>
                        }
                    </select>
                    <span asp-validation-for="NewRoleId" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <input type="submit" value="تغییر" class="btn btn-primary col-xs-12" />
                </div>
            </form>
        </div>
    </div>

}
else
{
    <h2 class="text-xs-center alert alert-success">سمت با موفقیت ارتقاء پیدا کرد</h2>
}

<script src="~/AdminRef/app-assets/js/jquery.validate.min.js"></script>
<script src="~/AdminRef/app-assets/js/jquery.validate.unobtrusive.min.js"></script>
