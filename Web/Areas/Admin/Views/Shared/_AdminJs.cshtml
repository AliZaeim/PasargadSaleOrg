<script type="text/javascript">

    $(document).ready(function () {

        $(function () {
            // this will get the full URL at the address bar
            var url = window.location.href;
            $(".is-shown a").each(function () {
                // checks if its the same on the address ba

                if (url == (this.href)) {
                    //for making parent of submenu active
                    $(this).parent().closest('li').addClass('active');
                    $(this).parent().parent().closest('li').addClass('active open');
                    $(this).parent().parent().parent().parent().closest('li').addClass('active open');
                }

            });

        });

        $(".showspinner").click(function () {
            $("#Progress").fadeIn();
        });
        $(".zeye").on("click", function () {
            $(this).toggleClass("fa-eye fa-eye-slash");
            $(this).attr('title', $(this).attr('title') === 'مشاهده' ? 'مخفی' : 'مشاهده');

            var $thuli = $(this).nextAll(".updlist");
            var cl = $thuli.attr('class');

            if ($thuli.hasClass("hidden")) {
                $thuli.toggle('slow');
                $thuli.removeClass("hidden");
                $thuli.addClass("shown");

                return;
            }
            if ($thuli.hasClass("shown")) {
                $thuli.toggle('slow');
                $thuli.removeClass("shown");
                $thuli.addClass("hidden");

                return;
            }



        });

    });
</script>