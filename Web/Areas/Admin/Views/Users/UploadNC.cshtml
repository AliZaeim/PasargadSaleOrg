@model Core.DTOs.General.UploadDocumentViewModel


<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <h1 class="alert alert-info text-xs-center">کارت ملی خود را آپلود کنید</h1>
        <form asp-action="UploadNC" asp-area="Admin" asp-controller="Users" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NCFileName" class="control-label"></label>
                <input asp-for="NCFileName" type="file" class="form-control" />
                <span asp-validation-for="NCFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="آپلود" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>



