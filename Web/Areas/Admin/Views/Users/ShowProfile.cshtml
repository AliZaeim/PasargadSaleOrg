@model DataLayer.Entities.User.User
@using Core.Convertors;
@using Core.Services.Interfaces;
@inject IUserService  _userService;
@{
    ViewData["Title"] = "نمایش پروفایل";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
   
}

<h1 class="text-xs-center alert alert-info">
    پروفایل @Model.FName @Model.LName 
</h1>
<div>
    <a asp-action="UpdateProfile"  class="btn btn-success float-xs-left">ویرایش</a>
</div>

<div>
    <h4>اطلاعات کاربر</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NC)
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate.ToShamsi()
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class="col-sm-10">
            <img width="75" height="75" src="~/images/usersavatar/@Model.Avatar" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Education)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Education)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Sex != null)
            {
                @if (Model.Sex == 1)
                {
                    <span>مرد</span>
                }
                else
                {
                    <span>زن</span>
                }
            }
            else
            {
                <span>-</span>
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cellphone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cellphone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-2">
            استان
        </dt>
        <dd class="col-sm-10">
            @Model.County.State.StateName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.County)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.County.CountyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HomeAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HomeAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WorkAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WorkAddress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankAccountNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankAccountNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BankCardNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BankCardNumber)
        </dd>

    </dl>
</div>

