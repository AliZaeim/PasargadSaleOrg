@model DataLayer.Entities.ComplementaryInfo.Slider

@{
    ViewData["Title"] = "ویرایش اسلایدر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-xs-center alert alert-info">
    ویرایش اسلایدر
    <a asp-action="Index" class="btn btn-warning float-xs-left"><i class="fa fa-reply"></i></a>
</h2>
<hr />
<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="OP_Create" />
            <input type="hidden" asp-for="CreateDate" />
            <input type="hidden" asp-for="OP_FakeRemove" />
            <input type="hidden" asp-for="RemoveDate" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <span data-toggle="tooltip" class="fa fa-question-circle-o text-warning cursor-pointer" title="حداکثر می توانید 1000 کاراکتر برای متن اسلایدر وارد کنید"></span> &ensp;
                <span class="float-xs-left"><span id="textchar-count" class="tag tag-pill tag-info cursor-pointer" data-toggle="tooltip" title="حداکثر 1000 کاراکتر">1000</span></span>
                <textarea asp-for="Text" rows="5" class="form-control"></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkText" class="control-label"></label>
                <input asp-for="LinkText" class="form-control" />
                <span asp-validation-for="LinkText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Linkaddress" class="control-label"></label>
                <input asp-for="Linkaddress" class="form-control" />
                <span asp-validation-for="Linkaddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>

<script src="~/AdminRef/app-assets/js/jquery-1.12.4.min.js"></script>
<script src="~/AdminRef/app-assets/js/jquery.validate.min.js"></script>
<script src="~/AdminRef/app-assets/js/jquery.validate.unobtrusive.min.js"></script>
<script>

    $(document).ready(function () {
        function charCount(id, max, showId) {

            var tlength = $(id).val().length;
            $(id).val($(id).val().substring(0, max));
            var tlength = $(id).val().length;
            remain = max - parseInt(tlength);

            $(showId).text(remain);
        }
        charCount("#Text", 1000, "#textchar-count");

        $('#Text').keyup(function () {

            charCount(this, 1000, "#textchar-count");
        });

    })
</script>

