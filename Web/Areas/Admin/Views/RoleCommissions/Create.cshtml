@model DataLayer.Entities.User.RoleCommission

@{
    ViewData["Title"] = "ثبت کارمزد";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-xs-center alert alert-info">
    ثبت کارمزد
    <a asp-action="Index" class="btn btn-warning float-xs-left"><i class="fa fa-reply"></i></a>
</h2>

<hr />
<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PersonalSalesPercent" class="control-label"></label>&ensp;<span>(درصد)</span>
                <input asp-for="PersonalSalesPercent" class="form-control" />
                <span asp-validation-for="PersonalSalesPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrganizationSalesPercent" class="control-label"></label>&ensp;<span>(درصد)</span>
                <input asp-for="OrganizationSalesPercent" class="form-control" />
                <span asp-validation-for="OrganizationSalesPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinSaleValue" class="control-label"></label>&ensp;<span>(ریال)</span>
                <input asp-for="MinSaleValue" class="form-control" />
                <span asp-validation-for="MinSaleValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinSaleCount" class="control-label"></label>
                <input asp-for="MinSaleCount" class="form-control" />
                <span asp-validation-for="MinSaleCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-success col-xs-12" />

            </div>
        </form>
    </div>
</div>
<script src="~/AdminRef/app-assets/js/jquery-1.12.4.min.js"></script>
<script src="~/AdminRef/app-assets/js/jquery.validate.min.js"></script>
<script src="~/AdminRef/app-assets/js/jquery.validate.unobtrusive.min.js"></script>

