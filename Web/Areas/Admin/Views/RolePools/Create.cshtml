@model DataLayer.Entities.User.RolePool

@{
    ViewData["Title"] = "ثبت پاداش استخر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<DataLayer.Entities.User.Role>
    roles = ViewData["Roles"] as List<DataLayer.Entities.User.Role>;

}

<h2 class="text-xs-center alert alert-info">
    ثبت پاداش استخر
    <a asp-action="Index" class="btn btn-warning float-xs-left"><i class="fa fa-reply"></i></a>
</h2>
<hr />
<div class="row">
    <div class="offset-md-4 col-md-4 col-xs-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>              

                <select asp-for="RoleId" class="form-control">
                    <option value="">تمام نقشها ...</option>
                    @foreach (var item in roles)
                    {
                        <option value="@item.RoleId">@item.RoleTitle</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ByDirectSale" class="control-label"></label>
                <select asp-for="ByDirectSale" class="form-control">
                    <option value="">انتخاب کنید ..</option>
                    <option value="true">بــله</option>
                    <option value="false">خــیر</option>
                </select>
                <span asp-validation-for="ByDirectSale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ByIndirectSale" class="control-label"></label>
                <select asp-for="ByIndirectSale" class="form-control">
                    <option value="">انتخاب کنید ..</option>
                    <option value="true">بــله</option>
                    <option value="false">خــیر</option>
                </select>
                <span asp-validation-for="ByIndirectSale" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Symbol" class="control-label"></label>
                <input asp-for="Symbol" class="form-control" />
                <span asp-validation-for="Symbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Percent" class="control-label"></label>
                <input asp-for="Percent" class="form-control" />
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>
<script src="~/AdminRef/app-assets/js/jquery-1.12.4.min.js"></script>
<script src="~/AdminRef/app-assets/js/jquery.validate.min.js"></script>
<script src="~/AdminRef/app-assets/js/jquery.validate.unobtrusive.min.js"></script>
