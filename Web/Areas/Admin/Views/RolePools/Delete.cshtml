@model DataLayer.Entities.User.RolePool

@{
    ViewData["Title"] = "حذف پاداش استخر";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="text-xs-center alert alert-info">
    حذف پاداش استخر
